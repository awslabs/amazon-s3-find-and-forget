{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Create Data Mapper Handler",
    "type": "object",
    "properties": {
        "body": {
            "description": "Body parameters for the request",
            "properties": {
                "QueryExecutor": {
                    "description": "The query executor used to query your dataset",
                    "type": "string",
                    "enum": ["athena"]
                },
                "Columns": {
                    "description": "Columns to query for MatchIds the dataset",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "Format": {
                    "description": "The format of the dataset",
                    "type": "string",
                    "default": "parquet",
                    "enum": ["parquet"]
                }
            },
            "if": {
                "properties": {
                    "QueryExecutor": { "const": "athena" }}
            },
            "then": {
                "properties": {
                    "QueryExecutorParameters": {
                        "$ref": "#/definitions/AthenaQueryExecutorParameters"
                    }
                },
                "required": ["QueryExecutorParameters"]
            },
            "required": ["Columns", "QueryExecutor"]
        },
        "pathParameters": {
            "description": "Path parameters for the request",
            "type": "object",
            "properties": {
                "data_mapper_id": {
                    "description": "ID of the data mapper",
                    "type": "string",
                    "pattern": "^([A-Za-z0-9])+$"
                }
            },
            "required": ["data_mapper_id"]
        }
    },
    "required": ["pathParameters", "body"],
    "definitions": {
        "AthenaQueryExecutorParameters": {
            "type": "object",
            "description": "Details of the query executor parameters to use when the QueryExecutor is set to 'athena'",
            "properties": {
                "DataCatalogProvider": {
                    "description": "The data catalog provider which contains the database table with metadata about your S3 data lake",
                    "enum": ["glue"],
                    "type": "string"
                },
                "Database": {
                    "description": "The database in the data catalog which contains the metatadata table",
                    "type": "string"
                },
                "Table": {
                    "description": "The table in the data catalog database containing the metatadata for your data lake",
                    "type": "string"
                }
            },
            "required": ["Database", "Table"]
        }
    }
}

